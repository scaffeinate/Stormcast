    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:id="@+id/nav_header_view"
        android:layout_width="match_parent"
        android:layout_height="125dp" />

    <ListView
        android:id="@+id/nav_drawer_list_view"
