<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="@dimen/fragment_add_location_padding">

	<EditText
		android:id="@+id/location_edit_text"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/search_location_edit_text"
		android:drawablePadding="15dp"
		android:drawableRight="@drawable/icon_search"
		android:focusableInTouchMode="false"
		android:fontFamily="sans-serif-condensed"
		android:hint="@string/enter_location_name"
		android:inputType="none"
		android:textStyle="bold">

		<requestFocus/>
	</EditText>

	<com.google.android.gms.maps.MapView
		android:id="@+id/location_map_view"
		android:layout_width="match_parent"
		android:layout_height="100dp"
		android:layout_below="@+id/location_edit_text"
		android:layout_gravity="center"
		android:layout_marginTop="20dp"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@+id/location_map_view">

		<RelativeLayout
			android:id="@+id/background_color_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="20dp">

			<TextView
				android:id="@+id/background_color_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:fontFamily="sans-serif-condensed"
				android:text="@string/background_color"
				android:textSize="17sp"
				android:textStyle="bold"/>

			<ImageButton
				android:id="@+id/color_image_button"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:background="@drawable/bg_color_button"
				android:clickable="true"/>
		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/text_color_layout"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/background_color_layout"
			android:layout_marginTop="20dp">

			<TextView
				android:id="@+id/text_color_text_view"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_centerVertical="true"
				android:fontFamily="sans-serif-condensed"
				android:text="@string/text_color"
				android:textSize="17sp"
				android:textStyle="bold" />

			<ImageButton
				android:id="@+id/text_color_image_button"
				android:layout_width="27dp"
				android:layout_height="27dp"
				android:layout_alignParentRight="true"
				android:layout_centerVertical="true"
				android:layout_marginTop="20dp"
				android:background="@drawable/text_color_button"
				android:clickable="true"/>
		</RelativeLayout>
	</RelativeLayout>
</RelativeLayout>