<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/item_location_padding">

    <TextView
        android:id="@+id/location_name_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/font_size_body"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/colors_indicator_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/bg_color_image_view"
            android:layout_width="@dimen/color_indicator_size"
            android:layout_height="@dimen/color_indicator_size"
            android:background="@drawable/color_indicator" />

        <ImageView
            android:id="@+id/text_color_image_view"
            android:layout_width="@dimen/color_indicator_size"
            android:layout_height="@dimen/color_indicator_size"
            android:layout_marginLeft="5dp"
            android:background="@drawable/color_indicator" />
    </LinearLayout>
</RelativeLayout>